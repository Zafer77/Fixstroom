<!-- Çerez Uyarısı -->
<div id="cookieConsent">
  Bu site çerez kullanır. Siteyi kullanarak kabul etmiş olursunuz.
  <button onclick="acceptCookies()" style="margin-left:15px; padding:5px 10px; cursor:pointer;">Kapat</button>
</div>

<script>
  function changeLanguage(lang) {
    alert('Dil seçimi: ' + lang + '. Çok dilli içerik daha sonra eklenecek.');
  }

  function acceptCookies() {
    localStorage.setItem('cookieAccepted', 'true');
    document.getElementById('cookieConsent').style.display = 'none';
  }

  window.onload = function() {
    if(!localStorage.getItem('cookieAccepted')) {
      document.getElementById('cookieConsent').style.display = 'block';
    }
  };
</script>

